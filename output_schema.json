{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "PDF Processing Output Schema",
  "description": "Schema for structured PDF content extraction with multi-OCR ensemble approach",
  "properties": {
    "document": {
      "type": "string",
      "description": "Name of the processed PDF document (without extension)"
    },
    "total_pages": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of pages in the PDF"
    },
    "processing_time": {
      "type": "number",
      "minimum": 0,
      "description": "Time taken to process the document in seconds"
    },
    "content": {
      "type": "array",
      "description": "Array of extracted text elements with structure classification",
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "description": "The extracted text content"
          },
          "type": {
            "type": "string",
            "enum": [
              "h1",
              "h2",
              "h3",
              "paragraph"
            ],
            "description": "Classification of text element based on font size analysis"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "OCR confidence score (0-1)"
          },
          "font_size": {
            "type": "number",
            "minimum": 0,
            "description": "Estimated font size in points"
          },
          "bbox": {
            "type": "array",
            "description": "Bounding box coordinates [x1, y1, x2, y2]",
            "items": {
              "type": "number"
            },
            "minItems": 4,
            "maxItems": 4
          },
          "page": {
            "type": "integer",
            "minimum": 1,
            "description": "Page number where the text appears"
          }
        },
        "required": [
          "text",
          "type",
          "confidence",
          "font_size",
          "bbox",
          "page"
        ]
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional processing metadata",
      "properties": {
        "ocr_engines": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of OCR engines used"
        },
        "total_elements": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of text elements extracted"
        },
        "headings": {
          "type": "object",
          "properties": {
            "h1": {
              "type": "integer",
              "minimum": 0
            },
            "h2": {
              "type": "integer",
              "minimum": 0
            },
            "h3": {
              "type": "integer",
              "minimum": 0
            },
            "paragraphs": {
              "type": "integer",
              "minimum": 0
            }
          },
          "description": "Count of different element types"
        }
      }
    }
  },
  "required": [
    "document",
    "total_pages",
    "processing_time",
    "content"
  ]
}